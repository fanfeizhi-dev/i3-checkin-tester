{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022", "DOM"],
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "@playwright/test"],
    "noEmit": true
  },
  "include": ["scripts/**/*.ts", "playwright.config.ts"],
  "exclude": ["node_modules"]
}
